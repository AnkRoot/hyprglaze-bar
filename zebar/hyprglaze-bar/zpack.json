{
  "$schema": "https://github.com/glzr-io/zebar/raw/v3.1.0/resources/zpack-schema.json",
  "name": "hyprglaze-bar",
  "version": "1.0.0",
  "description": "现代化状态栏 - 将 Hyprland 的优雅体验通过 GlazeWM 带到 Windows，基于 React + TypeScript 构建",
  "tags": ["hyprland", "glazewm", "windows", "statusbar", "tiling", "wayland-style", "react", "modern"],
  "previewImages": [],
  "repositoryUrl": "https://github.com/AnkRoot/hyprglaze-bar",
  "widgets": [
    {
      "name": "hyprglaze-bar",
      "htmlPath": "./dist/index.html",
      "zOrder": "normal",
      "shownInTaskbar": false,
      "focused": false,
      "resizable": false,
      "transparent": true,
      "includeFiles": ["dist/index.html", "dist/assets/**"],
      "caching": {
        "defaultDuration": 604800,
        "rules": []
      },
      "privileges": {
        "shellCommands": [],
        "networkAccess": true
      },
      "presets": [
        {
          "name": "default",
          "anchor": "top_center",
          "offsetX": "0px",
          "offsetY": "0px",
          "width": "100%",
          "height": "40px",
          "monitorSelection": {
            "type": "all"
          },
          "dockToEdge": {
            "enabled": true,
            "edge": "top",
            "windowMargin": "0px"
          }
        }
      ]
    }
  ]
}
